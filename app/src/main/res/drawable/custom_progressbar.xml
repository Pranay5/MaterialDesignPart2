<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:startColor="#ef0f0f"

                android:centerY="1.0"
                android:endColor="#9cb6ff"
                android:angle="180"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
        android:startColor="#ffea54"

        android:centerY="1.0"
        android:endColor="#85fd89"
        android:angle="270"/>

     </shape>
    </clip>
    </item>
    </layer-list>